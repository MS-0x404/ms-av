function report() {
    echo "\n"
    notify-send "MS-AV Report" "Malware Trovati: $count"
    timestamp=$(($time_end - $time_start))
    date=$(date +%Y-%m-%d_%H:%M:%S)
    log_file="$PATH_LOG/report-scansione-$date.log"
    json_file="$PATH_LOG/report-scansione-$date.json"
    hostname=$(hostnamectl --static)
    user=$(whoami)
    scan_id=$(uuidgen)

    echo -e "â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—" | tee -a "$log_file"
    echo -e "â•‘            ğŸ“‹ REPORT SCANSIONE MS-AV          â•‘" | tee -a "$log_file"
    echo -e "â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•" | tee -a "$log_file"

    echo -e " ğŸ“… Data/Ora:$date" | tee -a "$log_file"
    echo -e " ğŸ‘¤ Utente:$user" | tee -a "$log_file"
    echo -e " ğŸ’» Hostname:$hostname" | tee -a "$log_file"
    echo -e " ğŸ“‚ Path Scansionata:$path_home" | tee -a "$log_file"
    echo -e " ğŸ•’ Durata Scansione:${timestamp}s" | tee -a "$log_file"
    echo -e " ğŸ“„ File Scansionati:$file_tot" | tee -a "$log_file"
    echo -e " ğŸ†” Scan ID:$scan_id" | tee -a "$log_file"
    echo ""

    if [[ $count -gt 0 ]]; then
        echo -e " âš ï¸ Malware Rilevati: $count" | tee -a "$log_file"
        echo -e " ğŸ›‘ Stato Scansione : INFEZIONI TROVATE" | tee -a "$log_file"
    else
        echo -e " âœ… Nessun Malware Rilevato" | tee -a "$log_file"
        echo -e " ğŸ›¡ï¸ Stato Scansione : PULITO" | tee -a "$log_file"
    fi

    cat <<EOF > "$json_file"
{
  "timestamp": "$date",
  "utente": "$user",
  "hostname": "$hostname",
  "scan_id": "$scan_id",
  "path_scansionata": "$path_home",
  "durata_scansione": $timestamp,
  "file_scansionati": $file_tot,
  "malware_trovati": $count,
  "scan_status": "$scan_status"
}
EOF
    echo -e " ğŸ“ JSON salvato in: $json_file" | tee -a "$log_file"

    ##mailx -s "ğŸ“‹ REPORT SCANSIONE MS-AV - $date" -a $json_file $INVIO_MAIL
}
